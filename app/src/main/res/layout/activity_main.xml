<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dialogdemo.MainActivity">

    <TextView
        android:id="@+id/tvUITitle"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center"
        android:text="@string/titleString" />

    <Button
        android:id="@+id/btnQuit"
        style="@style/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/QuitButtonText"
        android:onClick="showAlertDialog"/>

    <TextView
        android:id="@+id/tvPickStyle"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/PickAStyle" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/white"
        android:popupBackground="?attr/colorButtonNormal"
        android:textSize="30sp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnPickADateSpinner"
        style="@style/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/DateButtonTextDefault"
        android:onClick="showDatePickerDialogSpinner" />

    <Button
        android:id="@+id/btnPickADateBuilderCalendar"
        style="@style/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/DateButtonTextBuilder"
        android:visibility="gone"
        android:onClick="showDatePickerDialogBuilderCalendar"/>

    <Button
        android:id="@+id/btnPickADateBuilderSpinner"
        style="@style/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/DateButtonTextBuilder"
        android:visibility="gone"
        android:onClick="showDatePickerDialogBuilderSpinner"/>

    <TextView
        android:id="@+id/tvDatePicked"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/dateSelected" />

</LinearLayout>
