<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- <item name="android:datePickerDialogTheme">@style/MySpinnerDatePickerStyle</item> -->
        <!-- <item name="android:datePickerDialogTheme">@style/MyCalendarDatePickerStyle</item> -->
    </style>

    <color name="MyBGColorLightBlue">#E2E7F5</color>
    <style name="myTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/MyBGColorLightBlue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="text" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center_horizontal|center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="btn">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <color name="MyBGColorWhite">#FFFFFF</color>
    <style name="spinner">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/MyBGColorWhite</item>
        <item name="android:popupBackground">@color/MyBGColorWhite</item>
        <item name="android:textSize">30sp</item>

    </style>

    <style name="MySpinnerDatePickerStyle" parent="android:Theme.Material.Dialog">
        <item name="android:datePickerStyle">@style/MySpinnerDatePicker</item>
    </style>

    <style name="MySpinnerDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="MyCalendarDatePickerStyle" parent="android:Theme.Material.Dialog">
        <item name="android:datePickerStyle">@style/MyCalendarDatePicker</item>
    </style>

    <style name="MyCalendarDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">calendar</item>
    </style>

</resources>
